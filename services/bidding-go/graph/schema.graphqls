extend schema
  @link(url: "https://specs.apollo.dev/federation/v2.0",
        import: ["@key", "@external"])

type Auction @key(fields: "id") {
  id: ID! @external
  bids: [Bid]
}

type Bid {
  id: ID!
  amount: Float!
  bidderId: ID!
  timestamp: String!
}

type Query {
  _serviceMetadata: String
}

type Mutation {
  placeBid(auctionId: ID!, amount: Float!): Bid
}